<Page x:Class="UFCTeams.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:UFCTeams"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Image x:Name="BackgroundImage"
               Source="Assets/Images/Octagon-UFC.jpg"
               Stretch="UniformToFill"
               Opacity="0.8"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch" />

        <Grid HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Margin="20">
            <Image x:Name="UFCLogo"
                   Source="/Assets/Images/Logo-UFC.png"
                   MaxWidth="150"
                   Stretch="Uniform" />
        </Grid>

        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Background="Black"
              CornerRadius="10"
              Opacity="0.9"
              Padding="20"
              Width="Auto"
              MaxWidth="800">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1"
                        HorizontalAlignment="Stretch">
                <TextBlock x:Name="SelectTeamTitle"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Text="teams"
                           FontSize="40"
                           FontFamily="{StaticResource MMAFont}"
                           FontWeight="Bold"
                           Foreground="#D20A0A"
                           Margin="0,0,0,20"
                           TextWrapping="Wrap" />

                <ComboBox x:Name="TeamComboBox"
                          PlaceholderText="choose or type (new) team"
                          IsEditable="True"
                          Height="40"
                          MinWidth="200"
                          MaxWidth="400"
                          HorizontalAlignment="Stretch"
                          CornerRadius="10"
                          BorderBrush="White"
                          SelectionChanged="TeamComboBox_SelectionChanged" />
            </StackPanel>

            <!-- Fighter 1 -->
            <StackPanel Grid.Row="2"
                        Margin="0,15,0,0">
                <TextBlock Text="fighter 1"
                           FontSize="18"
                           Foreground="White"
                           FontFamily="{StaticResource MMAFont}"
                           FontWeight="Bold" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="Fighter1TextBox"
                             PlaceholderText="name"
                             Height="40"
                             CornerRadius="10"
                             Grid.Column="0"
                             Margin="5" />
                    
                    <ComboBox x:Name="Fighter1WeightClassComboBox"
                              PlaceholderText="weightclass"
                              Height="40"
                              Grid.Column="1"
                              CornerRadius="10"
                              BorderBrush="White"
                              Margin="5" />
                    
                    <CheckBox x:Name="Fighter1IsChampionCheckBox"
                              Content="champion"
                              Foreground="White"
                              FontFamily="{StaticResource MMAFont}"
                              Grid.Column="2"
                              VerticalAlignment="Center"
                              Margin="5" />
                    
                    <TextBox x:Name="Fighter1WinsTextBox"
                             PlaceholderText="wins"
                             Height="40"
                             CornerRadius="10"
                             Grid.Column="3"
                             Margin="5"
                             TextChanging="Fighter1WinsTextBox_TextChanging" />
                </Grid>
            </StackPanel>

            <!-- Fighter 2 -->
            <StackPanel Grid.Row="3"
                        Margin="0,15,0,0">
                <TextBlock Text="fighter 2"
                           FontSize="18"
                           Foreground="White"
                           FontFamily="{StaticResource MMAFont}"
                           FontWeight="Bold" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="Fighter2TextBox"
                             PlaceholderText="name"
                             Height="40"
                             CornerRadius="10"
                             Grid.Column="0"
                             Margin="5" />
                    
                    <ComboBox x:Name="Fighter2WeightClassComboBox"
                              PlaceholderText="weightclass"
                              Height="40"
                              Grid.Column="1"
                              CornerRadius="10"
                              BorderBrush="White"
                              Margin="5" />
                    
                    <CheckBox x:Name="Fighter2IsChampionCheckBox"
                              Content="champion"
                              Foreground="White"
                              FontFamily="{StaticResource MMAFont}"
                              Grid.Column="2"
                              VerticalAlignment="Center"
                              Margin="5" />
                    
                    <TextBox x:Name="Fighter2WinsTextBox"
                             PlaceholderText="wins"
                             Height="40"
                             CornerRadius="10"
                             Grid.Column="3"
                             Margin="5" />
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="4"
                        Margin="0,15,0,0">
                <TextBlock Text="coach"
                           FontSize="18"
                           Foreground="White"
                           FontFamily="{StaticResource MMAFont}"
                           FontWeight="Bold" />
                
                <TextBox x:Name="CoachTextBox"
                         PlaceholderText="coach name"
                         Width="300"
                         Height="40"
                         CornerRadius="10"
                         BorderBrush="White"
                         Margin="5"
                         HorizontalAlignment="Stretch" />
            </StackPanel>

            <!-- Save & clear Buttons -->
            <StackPanel Grid.Row="5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="15">
                <Button Content="save"
                        Click="SaveTeamButton_Click"
                        FontFamily="{StaticResource MMAFont}"
                        FontSize="14"
                        Width="100"
                        Height="40"
                        Background="#D20A0A"
                        Foreground="White"
                        CornerRadius="10"
                        Margin="5" />
                
                <Button Content="clear"
                        Click="ClearInputFieldsButton_Click"
                        FontFamily="{StaticResource MMAFont}"
                        FontSize="14"
                        Width="100"
                        Height="40"
                        Background="Gray"
                        Foreground="White"
                        CornerRadius="10"
                        Margin="5" />
                
                <Button Content="delete team"
                        Click="DeleteTeamButton_Click"
                        FontFamily="{StaticResource MMAFont}"
                        FontSize="14"
                        Width="100"
                        Height="40"
                        Background="Black"
                        Foreground="White"
                        CornerRadius="10"
                        Margin="5" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
